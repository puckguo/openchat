# ============================================
# Production Environment Configuration
# ============================================
# Use this as a template for production deployments

# ============================================
# Server Configuration
# ============================================
WS_PORT=3002
WS_HOST=0.0.0.0
NODE_ENV=production

# ============================================
# Database Configuration
# ============================================
# Replace with your production database credentials
DATABASE_URL=postgresql://opencode_user:STRONG_PASSWORD_HERE@your-rds-host:5432/opencode_chat

# Enable database features
ENABLE_DATABASE=true

# ============================================
# AI Service Configuration
# ============================================
# Replace with your production DeepSeek API key
DEEPSEEK_API_KEY=sk-your-production-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=2000
ENABLE_AI=true

# ============================================
# File Storage Configuration
# ============================================
# Configure Alibaba Cloud OSS for production
VITE_OSS_ACCESS_KEY_ID=your-production-access-key
VITE_OSS_ACCESS_KEY_SECRET=your-production-secret-key
VITE_OSS_BUCKET=your-production-bucket
VITE_OSS_REGION=oss-cn-beijing
ENABLE_OSS=true

# ============================================
# Authentication Configuration
# ============================================
# Configure Supabase for production authentication
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLISHABLE_KEY=your-production-publishable-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key
ENABLE_SUPABASE_AUTH=true
ALLOW_ANONYMOUS=false

# ============================================
# Security Configuration
# ============================================
# Generate secure random strings for these
SESSION_SECRET=generate-a-secure-random-string-here
JWT_SECRET=generate-another-secure-random-string-here

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# Monitoring & Alerting
# ============================================
# Optional: Add your monitoring service configuration
# SENTRY_DSN=
# DATADOG_API_KEY=
